@model Blog
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Blog Details Hero Section Begin -->
<section class="blog-details-hero set-bg" data-setbg="@Model.ImageUrl">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 p-0 m-auto">
                <div class="bh-text">
                    <h3>@Model.Title</h3>
                    <ul>
                        <li>Yazan: Admin</li>
                        <li>@Model.BlogDate.ToString("dd/MM/yyyy")</li>
                        <li>Okuma Süresi: @Model.ReadTime dk</li>
                 
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero Section End -->
<!-- Blog Details Section Begin -->
<section class="blog-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 p-0 m-auto">
                <div class="blog-details-title">
                 <p>
						@Html.Raw(@Model.Content)
                 </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->

