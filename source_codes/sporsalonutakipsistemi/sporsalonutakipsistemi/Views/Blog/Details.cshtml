	@section Disqus {
    <script id="dsq-count-scr" src="//enzekgym.disqus.com/count.js" async></script>
    }

			@section DisqusCss{
    <style>
        /* Disqus koyu tema CSS kodu */

        #disqus_thread {
            background-color: #121212;
            color: #ffffff;
            padding: 20px;
            font-family: Arial, sans-serif;
            font-size: 14px;
            line-height: 1.5;
            border-radius: 5px;
        }

            #disqus_thread a {
                color: #ffffff;
            }

                #disqus_thread a:hover {
                    color: #cccccc;
                }

            #disqus_thread blockquote {
                color: #cccccc;
                border-color: #666666;
            }

                #disqus_thread blockquote p {
                    font-style: italic;
                }

            #disqus_thread hr {
                border-top-color: #666666;
            }

            #disqus_thread .comment {
                margin-bottom: 20px;
                padding-bottom: 20px;
                border-bottom: 1px solid #666666;
            }

                #disqus_thread .comment .avatar {
                    margin-right: 20px;
                    float: left;
                }

                    #disqus_thread .comment .avatar img {
                        width: 64px;
                        height: 64px;
                        border-radius: 50%;
                        display: block;
                    }

                #disqus_thread .comment .text {
                    overflow: hidden;
                }

                #disqus_thread .comment .author {
                    font-weight: bold;
                    margin-bottom: 5px;
                }

                #disqus_thread .comment .date {
                    font-size: 12px;
                    margin-bottom: 5px;
                }

                #disqus_thread .comment .excerpt {
                    margin-top: 5px;
                    font-style: italic;
                }

    </style>
}