@model Contact

@{
    ViewData["Title"] = "İletişim";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/gymlife/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>İletişim</h2>
                    <div class="bt-option">
                        <a asp-action="Index" asp-controller="Default">Ana Sayfa</a>
                      
                        <span>İletişim</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->


<section class="contact-section spad">
    <!-- success begin -->
    @if (TempData["Onay"] != null)
    {

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Başarılı!</strong> @TempData["Onay"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <!-- success end -->
	
    <!-- Contact Section Begin -->
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>İletişim</span>
                    <h2>Bizimle İletişime Geç</h2>
                </div>
				@await Component.InvokeAsync("IletisimAdress")
            </div>
            <div class="col-lg-6">
                <div class="leave-comment">
                    <form method="post">
                        @Html.TextBoxFor(x=>x.Name,"",new{@type="Text",@placeholder="İsim"})
						@Html.ValidationMessageFor(x=>x.Name,"",new{style="color:red"})
						
                        @Html.TextBoxFor(x=>x.Surname,"",new{@type="Text",@placeholder="Soy isim"})
                        @Html.ValidationMessageFor(x=>x.Surname,"",new{style="color:red"})

                        @Html.TextBoxFor(x=>x.Email,"",new{@type="email",@placeholder="Email"})
                        @Html.ValidationMessageFor(x=>x.Email,"",new{style="color:red"})
						
                        @Html.TextBoxFor(x=>x.Subject,"",new{@type="Text",@placeholder="Konu"})
                        @Html.ValidationMessageFor(x=>x.Subject,"",new{style="color:red"})

                        @Html.TextAreaFor(x=>x.Message,new{@type="Text",@placeholder="Mesaj"})
                        @Html.ValidationMessageFor(x=>x.Message,"",new{style="color:red"})
                        <button type="submit">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="map">
            @Html.Raw(@ViewData["MapUrl"])
        </div>
    </div>
</section>
<!-- Contact Section End -->

