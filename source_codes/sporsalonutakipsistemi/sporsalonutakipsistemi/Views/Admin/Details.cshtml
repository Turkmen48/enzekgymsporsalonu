@model UserInfo


<!-- Modal -->
<div class="modal fade" id="details-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detaylar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label >TC:</label>
                    @Html.TextBoxFor(x=>x.Tc,"",new{@class="form-control",@readonly="readonly"})
                <label>Ad:</label>
                @Html.TextBoxFor(x=>x.Name,"",new{@class="form-control",@readonly="readonly"})
                <label>Soyad:</label>
                @Html.TextBoxFor(x=>x.Surname,"",new{@class="form-control",@readonly="readonly"})
                <label>Telefon:</label>
                @Html.TextBoxFor(x=>x.Phone,"",new{@class="form-control",@readonly="readonly"})
                <label>Plan:</label>
                @Html.TextBoxFor(x=>x.Price.Title,"",new{@class="form-control",@readonly="readonly"})
                <label >Plan Başlama Tarihi:</label>
                @Html.TextBoxFor(x=>x.PlanStartDate,Model.PlanStartDate.Value.ToString("dd.MM.yyyy"),new{@class="form-control",@readonly="readonly"})
                <label>Plan Bitiş Tarihi:</label>
                @Html.TextBoxFor(x=>x.PlanEndDate,Model.PlanEndDate.Value.ToString("dd.MM.yyyy"),new{@class="form-control",@readonly="readonly"})
                <label>Email:</label>
                @Html.TextBoxFor(x=>x.User.Email,"",new{@class="form-control",@readonly="readonly"})
                <label>Şifre:</label>
                @Html.TextBoxFor(x=>x.User.Password,"",new{@class="form-control",@readonly="readonly"})
                <label>Kayıt Tarihi:</label>
                @Html.TextBoxFor(x=>x.RegistrationDate,Model.RegistrationDate.Value.ToString("dd.MM.yyyy"),new{@class="form-control",@readonly="readonly"})
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tamam</button>
                
            </div>
        </div>
    </div>
</div>

