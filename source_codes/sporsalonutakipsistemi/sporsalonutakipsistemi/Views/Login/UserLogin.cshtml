@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/login/style.css" rel="stylesheet" />


</head>
<body>

    <form method="post" action="#">
        <div class="page">
            <div class="container">
                <div class="left">
                    <div class="login">User</div>
                    <div class="eula">Üye paneline giriş içindir. Sadece salona kayıtlı ve kendisine email ve şifre verilmiş üyeler giriş yapabilir.
                        @Html.ValidationMessageFor(x=>x.Email, "",new{@style="color:red;"})

                        @Html.ValidationMessageFor(x=>x.Password, "",new{@style="color:red;"})
                        @if (ViewData["Hata"] != null)
                        {
                            <p style="color:red;">@ViewData["Hata"]</p>
                        }
                    </div>
                </div>
                <div class="right">
                    <svg viewBox="0 0 320 300">
                        <defs>
                            <linearGradient inkscape:collect="always"
                                            id="linearGradient"
                                            x1="13"
                                            y1="193.49992"
                                            x2="307"
                                            y2="193.49992"
                                            gradientUnits="userSpaceOnUse">
                                <stop style="stop-color:#ff00ff;"
                                      offset="0"
                                      id="stop876" />
                                <stop style="stop-color:#ff0000;"
                                      offset="1"
                                      id="stop878" />
                            </linearGradient>
                        </defs>
                        <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
                    </svg>
                    <div class="form">
                        <label for="username">Email</label>
						@Html.TextBoxFor(x => x.Email,new{@id="username",@type="email"})
                        <label for="password">Şifre</label>
						@Html.TextBoxFor(x => x.Password,new{@id="password",@type="password"})
                        <input type="submit" id="submit" value="Giriş">
                    </div>

                </div>
            </div>
        </div>
    </form>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js"></script>
<script type="text/javascript" src="~/css/login/script.js"></script>
</html>
